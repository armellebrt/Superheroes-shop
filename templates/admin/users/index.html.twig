{% extends 'admin/base_admin.html.twig' %}

{% block title %}Users index{% endblock %}

{% block body %}
    <div class="row">
        {% block admin_sidebar %}{{ parent() }}{% endblock %}
        <div class="col">
            <h1>Utilisateurs</h1>

            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Pseudo</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.pseudo }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        <td>
                            <div class="row">
                                <a class="col" href="{{ path('users_edit', {'id': user.id}) }}"><button class="btn btn-success">Modifier</button></a>
                                <a class="col" href="{{ path('users_show', {'id': user.id}) }}"><button class="btn btn-primary">Infos</button></a>
                                {{ include('admin/users/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Aucun utilisateur enregistré</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('users_new') }}">Créer un utilisateur</a>

        </div>
    </div>

   {% endblock %}
